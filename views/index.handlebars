<div class="container d-flex justify-content-center">
  <img src="/assets/img/burger.jpg">
</div>
<div class="container d-flex justify-content-center">
  <h1>Burger Eating</h1>
</div>




<div class="container">
  <div class="row">
    <div class="col-sm">
       {{#each burgers}}

      {{#unless dataValues.devoured}}
      <div class="burgerDiv">
        <p class="burgerName">{{dataValues.id}}.{{dataValues.burger_name}}</p>
      </div>
          <div class="col-sm">
            <form>
              Who should eat it?
              <input id = "customer" type= "text" name= "customer">
            </form>
       <button class="devour btn btn-warning" data-id="{{dataValues.id}}">Eat Me</button>
    </div>
        {{/unless}}

    {{/each}}
    </div>

    <div class="col-sm">
       {{#each burgers}}
      {{!-- Goes through burger object and show only true devoured objects --}}
      {{#if dataValues.devoured}}
      <div class="burgerDiv">
        <p>{{dataValues.burger_name}}</p>
      </div>
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>






<div class="container d-flex justify-content-center">
  <form class="create-form">

    <div class="form-group burgerName">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name">



      <button id="submit" class="btn btn-primary" type="submit">Add Burger</button>
  </form>
</div>
</div>
<div class="container d-flex justify-content-center">
  <p>Enter the burger you want to eat and hit submit</p>
</div>


